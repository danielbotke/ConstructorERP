    <class>modelo.Cliente</class>
    <class>modelo.Estado</class>
    <class>modelo.Historico</class>
    <class>modelo.Indice</class>
    <class>modelo.Pais</class>
    <class>modelo.Pessoa</class>
    <class>modelo.PessoaFisica</class>
    <class>modelo.PessoaJuridica</class>
    <class>modelo.Predio</class>
    <class>modelo.TipoIndice</class>
    <class>modelo.Usuario</class>
    <class>modelo.SaldoCaixa</class>
    <class>modelo.Vaga</class>
    <class>modelo.ReservaApto</class>
    <class>modelo.ContasPagar.Categoria</class>
    <class>modelo.ContasPagar.Fornecedor</class>
