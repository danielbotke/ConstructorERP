    <class>modelo.ContasReceber.Contrato</class>
    <class>modelo.ContasReceber.ContratoAluguel</class>
    <class>modelo.ContasReceber.HistoricoGanhoFinanceiro</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="hibernate.connection.username" value="c3po"/>
      <property name="hibernate.connection.password" value="r2d2"/>
      <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/database?allowPublicKeyRetrieval=true&amp;useSSL=false" />
      <!--<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/database"/>-->
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.transaction.manager_lookup_class" value="org.hibernate.transaction.SunONETransactionManagerLookup"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
      <!-- Se der erro tirar daqui para baixo (C3p0):-->
      <property name="connection.provider_class" value="org.hibernate.connection.C3P0ConnectionProvider"/>
      <property name="c3p0.acquire_increment" value="1"/>
      <property name="c3p0.idle_test_period" value="100"/>
      <!-- seconds -->
      <property name="c3p0.max_size" value="100"/>
      <property name="c3p0.max_statements" value="0"/>
      <property name="c3p0.min_size" value="10"/>
      <property name="c3p0.timeout" value="1800"/>
      <!-- seconds -->
    </properties>
  </persistence-unit>
</persistence>
